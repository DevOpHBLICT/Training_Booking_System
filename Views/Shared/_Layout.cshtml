                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Course Titles", "Index", "Course")</li>
                                    <li>@Html.ActionLink("Course Dates (All)", "Index", "Course_Dates")</li>
                                    <li>@Html.ActionLink("Course Dates (Live)", "Live", "Course_Dates")</li>
